<%= form_with(model: archive, local: true) do |form| %>
  <% if archive.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(archive.errors.count, "error") %> prohibited this archive from being saved:</h2>

      <ul>
      <% archive.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field mt-3">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="field mt-3">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="field mt-3"> 
    <%= form.label :document %>
    <%= form.file_field :document %>
  </div>

  <div class="field mt-3">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, class: "form-control", value: current_user.names + " " + current_user.lastnames, :disabled => true %>
  </div>

  <div class="actions mt-3">
    <%= form.submit %>
  </div>
<% end %>
