<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Medicamentos</h1>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Cantidad de Píldoras</th>
        <th>Descripción</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @medicines.each do |medicine| %>
        <tr>
          <td><%= medicine.name %></td>
          <td><%= medicine.pills %></td>
          <td><%= medicine.description %></td>
          <td><%= link_to 'Mostrar', medicine %></td>
          <td><%= link_to 'Editar', edit_medicine_path(medicine) %></td>
          <td><%= link_to 'Destruir', medicine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Nuevo Medicamento', new_medicine_path, class: "btn btn-outline-info" %>
</div>

